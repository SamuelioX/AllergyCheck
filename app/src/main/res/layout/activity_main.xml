    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/condition"
        android:id="@+id/treeConditionTextView"
        android:layout_below="@+id/treeView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/location"
        android:id="@+id/locationTextView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/airname"
        android:id="@+id/allergyTextView"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/treeConditionTextView"
        android:layout_alignStart="@+id/treeConditionTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/treename"
        android:id="@+id/treeView"
        android:layout_below="@+id/aqContidionTextView"
        android:layout_alignRight="@+id/allergyTextView"
        android:layout_alignEnd="@+id/allergyTextView"
        android:layout_marginTop="90dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/airqualcondition"
        android:id="@+id/aqContidionTextView"
        android:layout_below="@+id/allergyTextView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:id="@+id/searchCityButton"
        android:layout_below="@+id/cityLocationInput"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cityLocationInput"
        android:layout_below="@+id/locationTextView"
        android:layout_centerHorizontal="true"
        android:text="City"
        android:inputType="text" />


